@model IEnumerable<SEP.Models.Group>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/datatable.min.js"></script>
<link href="~/Content/datatable.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Allocated Supervisors for projects</h2>
<hr />
<p>
    @using (Html.BeginForm("index", "Groups", FormMethod.Get))
    {
        <b>Search By</b>
        <br />
        @Html.RadioButton("SearchBy","projectid",true)<text>Project ID</text>
        @Html.RadioButton("SearchBy","supervisor")<text>Supervisor</text><br /><br />
        @Html.TextBox("Search")<input type="submit" value="Search">
        

    }
</p>
<br />
<a class="btn btn-primary btn-sm" href="~/Groups/Create" role="button">Create a New Supervisor</a>

<button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-eye-open"></span>
    <a href="~/Lecturers">View Lecture Details</a>
</button>
<button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-pencil"></span>
    <a href="~/AllocatedLecturers">Create a Lecture Panel</a>
</button>
<button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-eye-open"></span>
    <a href="~/Students1">View Student CV</a>
</button> 
<hr />
<div class="container">
    <table id="example" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supervisor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supervisor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GroupID }) |
            @Html.ActionLink("Details", "Details", new { id = item.GroupID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.GroupID })
        </td>
    </tr>
}
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $('#example')
        .removeClass('display')
        .addClass('table table-striped table-bordered');
</script>

